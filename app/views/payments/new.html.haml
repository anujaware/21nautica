%h3 Payments
.row
  = simple_form_for @payment , html: {class: 'form-horizontal'},url: url_for(action: 'create', :controller => 'payments'), method: 'post', defaults: {input_html: {class: 'form-control'}} do |f|
    .col-md-6
      - if @payment.type.eql?("Paid")
        = f.input :participants_name, collection: TRANSPORTERS, as: :select, label: 'Vendor Name' , include_blank: false
      - else
        = f.input :participants_name, collection: Customer.all.collect(&:name), as: :select,
           label: 'Customer Name' , include_blank: false


      = f.input :date_of_payment, as: :string, input_html: { class: 'form-control date', id: 'payment_date'}

      = f.input :amount, input_html: {:"data-validation" => "number required", :min => 0, :"data-validation-error-msg" => "Quantity Should be a valid Positive Number."}

      = f.input :mode_of_payment, collection: PAYMENT_MODES, as: :select, label: 'Type' , include_blank: false

      = f.input :reference, label: 'Reference', input_html: { :"Placeholder" => "cheque number / cash"}

      = f.input :remarks, label: 'Remark'

      .form-group
        .col-sm-offset-2.col-sm-2
          = f.submit 'Save', class: 'btn-primary'

:javascript
  window.validate_form = function(){
    $.validate({
      form: '#new_paid',
      scrollToTopOnError : false
    });
    $.validate({
      form: '#new_received',
      scrollToTopOnError : false
    });
  }
  validate_form();