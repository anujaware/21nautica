%table.table{id: 'movements_table'}
  %thead
    %th Booking Number
    %th Customer Name
    %th Truck Number
    %th Transporter Name
    %th Vessel Targeted
    %th Port of Discharge
    %th Container Number
    %th Movement Type
    %th Shipping Seal
    %th W O Number
    %th#btnAddNewRow Status
  %tbody
    - @movements.each do |element|
      %tr{id: element.id }
        %td= element.booking_number
        %td= element.customer_name
        %td= element.truck_number
        %td= element.transporter_name
        %td= element.vessel_targeted
        %td= element.port_of_discharge
        %td= element.container_number
        %td= element.movement_type
        %td= element.shipping_seal
        %td= element.w_o_number
        %td.updateStatus{class: "text-center"}
          .updateStatus.h5.text-capitalize
            = element.status.humanize
          -if @show_update                        
            %button.btn.btn-small.btn-primary{'data-movement-id' => "#{element.id}", 'data-target' => '#statusModal', 'data-toggle' => 'modal', 'data-states' => element.aasm.events.join(',')} Update
          
#statusModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "basicModal", role: "dialog", tabindex: "-1"}
  .modal-dialog
    = simple_form_for(:movement, url: '', html: { class: 'form-horizontal'}, remote: true, defaults: {input_html: {class: 'form-control'}}) do |f|
      .modal-content
        .modal-header
          = link_to 'Ã—', 'javascript:void(0)', class: 'close', data: {dismiss: 'modal'}, aria: {labelledby: 'close'}
          %h1.modal-title Update Status and Location
        
        .modal-body
          = f.input :status, collection: []
          = f.input :current_location, as: :text

        .modal-footer
          = link_to 'Cancel', 'javascript:void(0)', class: 'btn btn-primary', data: {dismiss: 'modal'}
          = f.submit 'Save', class: 'btn btn-primary'        
    
:coffeescript
  $('#statusModal').on 'show.bs.modal', (event) ->
    id = $(event.relatedTarget).attr('data-movement-id')
    $("#movements_table tr#"+ id + " td.updateStatus .updateStatus").hide()
    $('#statusModal form').attr('action', "/movements/" + id + "/updateStatus")
    $('#statusModal form #movement_status').html("")
    for i in $(event.relatedTarget).attr('data-states').split(",")
      $('#statusModal form #movement_status').append("<option value=" + i + ">" + i.replace(/_/g, ' ') + "</option>")

  $('#statusModal').on 'hide.bs.modal', (event) ->
    $("#movements_table tr td.updateStatus .updateStatus").show()
  