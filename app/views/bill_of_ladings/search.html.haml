%h3 Update BL Payment details (USD) with Work Order
.row
  = simple_nested_form_for @bl, html: {class: 'form-horizontal'}, defaults: {input_html: {class: 'form-control'}} do |f|
    .col-md-6
      %label BL Number:   #{@bl.bl_number} 
      = f.input :payment_ocean
      = f.input :cheque_ocean, label: "Cheque Number"
      = f.input :shipping_line
      = f.input :payment_clearing, label: "Clearing Charges" , disabled: @bl.is_export_bl?
      = f.input :cheque_clearing, label: "Cheque Number" , disabled: @bl.is_export_bl?
      = f.input :remarks
      .form-group
        .col-sm-offset-2.col-sm-2
          = f.submit class: 'btn-primary'

