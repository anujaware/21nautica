%h2= t "devise.invitations.new.header"
= simple_form_for(resource, :as => resource_name, html: { class: 'form-horizontal container', :method => :post}, :url => invitation_path(resource_name),defaults: {input_html: {class: 'form-control'}}) do |f|
  = devise_error_messages!
  - resource.class.invite_key_fields.each do |field|
    = f.input field 
  = f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary'