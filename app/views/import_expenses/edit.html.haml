.row
  = simple_nested_form_for @import_expense, url: import_item_import_expense_path, html: {class: 'form-horizontal'}, defaults: {input_html: {class: 'form-control'}} do |f|
    .col-md-6
      = f.input :category, collection: ImportExpense::CATEGORIES, as: :select, label: 'Category', include_blank: true
      = f.input :name, as: :string
      = f.input :amount, as: :string
      = f.input :currency, collection: ImportExpense::CURRENCY, as: :select, label: 'Equipment', include_blank: false
      = f.input :invoice_date, as: :string
      = f.input :delivery_date, as: :string

      .form-group
        .col-sm-offset-2.col-sm-2
          = f.submit 'Save', class: 'btn-primary'
    .col-md-6

